# PixelLumo Environment Configuration
# Copy this file to .env and update values

# Server
PORT=5000
NODE_ENV=development

# Database


# Authentication
SECRET_KEY=pixelLumoSecret_change_in_production
JWT_EXPIRY=24h

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Socket.IO
SOCKET_IO_PORT=5000

# Frontend
FRONTEND_URL=http://localhost:3000
# Admin Account
# Set the email of the user who will have admin privileges
ADMIN_EMAIL=admin@example.com

# Email Configuration (for password reset functionality)
# Using Gmail: Get App Password from https://myaccount.google.com/apppasswords
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Alternative SMTP Configuration
# EMAIL_SERVICE=custom
# EMAIL_HOST=smtp.example.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@example.com
# EMAIL_PASS=your-password