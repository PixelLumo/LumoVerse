# PixelLumoApp - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ============================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================

# API Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_SOCKET_URL=http://localhost:5000
REACT_APP_API_TIMEOUT=30000

# App Environment
REACT_APP_ENV=development
REACT_APP_VERSION=1.0.0
REACT_APP_LOG_LEVEL=debug

# Feature Flags
REACT_APP_ENABLE_SOCKET_IO=true
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_CRASH_REPORTING=false

# Firebase (optional - for push notifications)
# REACT_APP_FIREBASE_API_KEY=
# REACT_APP_FIREBASE_AUTH_DOMAIN=
# REACT_APP_FIREBASE_PROJECT_ID=

# ============================================
# BACKEND ENVIRONMENT VARIABLES
# ============================================

# Server Configuration
BACKEND_PORT=5000
BACKEND_NODE_ENV=development
BACKEND_LOG_LEVEL=debug

# Database Configuration
BACKEND_MONGO_URI=mongodb://127.0.0.1:27017/pixellumo
BACKEND_MONGO_POOL_SIZE=10

# Authentication
BACKEND_JWT_SECRET=your_super_secret_jwt_key_change_in_production
BACKEND_JWT_EXPIRY=7d
BACKEND_BCRYPT_ROUNDS=12

# File Upload Configuration
BACKEND_UPLOAD_DIR=./uploads
BACKEND_MAX_FILE_SIZE=5242880
BACKEND_ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# CORS Configuration
BACKEND_CORS_ORIGIN=http://localhost:19000,http://localhost:3000
BACKEND_CORS_CREDENTIALS=true

# Rate Limiting
BACKEND_RATE_LIMIT_WINDOW_MS=900000
BACKEND_RATE_LIMIT_MAX_REQUESTS=100
BACKEND_RATE_LIMIT_LOGIN_MAX=5

# Email Configuration (if applicable)
# BACKEND_SMTP_HOST=
# BACKEND_SMTP_PORT=587
# BACKEND_SMTP_USER=
# BACKEND_SMTP_PASS=
# BACKEND_SMTP_FROM=

# Socket.io Configuration
BACKEND_SOCKET_TIMEOUT=60000
BACKEND_SOCKET_PING_INTERVAL=25000

# External Services (optional)
# BACKEND_CLOUDINARY_NAME=
# BACKEND_CLOUDINARY_API_KEY=
# BACKEND_CLOUDINARY_API_SECRET=

# Security
BACKEND_HELMET_ENABLED=true
BACKEND_SANITIZE_ENABLED=true

# ============================================
# PRODUCTION CONFIGURATION
# ============================================
# When deploying to production, override these values:
# REACT_APP_API_URL=https://api.yourdomain.com/api
# REACT_APP_SOCKET_URL=https://api.yourdomain.com
# BACKEND_NODE_ENV=production
# BACKEND_MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/pixellumo
# BACKEND_JWT_SECRET=use_a_strong_randomly_generated_secret
# BACKEND_CORS_ORIGIN=https://yourdomain.com
# BACKEND_RATE_LIMIT_MAX_REQUESTS=1000
